         <children>
              <TextField fx:id="name_field" prefHeight="27.0" prefWidth="203.0" promptText="Имя" style="-fx-background-color: transpanent; -fx-border-color: #40ccd8; -fx-border-width: 0px 0px 2px 0px;" />
